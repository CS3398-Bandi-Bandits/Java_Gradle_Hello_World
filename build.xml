<project>

    <target name="clean">
        <delete dir="build"/>
    </target>

    <target name="compile">
        <mkdir dir="build/classes"/>
        <javac  srcdir="src/pizzaBuilder;
                        src/pizzaDecorator;"
                destdir="build/classes"
                includeantruntime="false"/>
    </target>

    <target name="jar">
        <mkdir dir="build/jar"/>
        <jar destfile="build/jar/PizzaMain.jar" basedir="build/classes">
            <manifest>
                <attribute name="Main-Class" value="patternsexamp.PizzaMain"/>
            </manifest>
        </jar>
    </target>

    <target name="run">
        <java jar="build/jar/PizzaMain.jar" fork="true"/>
    </target>

</project>